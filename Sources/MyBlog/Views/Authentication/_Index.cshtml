@model MyBlog.Engine.Models.AuthenticationProviders
<form asp-action="Login" asp-controller="Authentication" method="post" asp-antiforgery="true">
    <input asp-for="ReturnUrl" type="hidden" />
    <div>
        <div class="d-grid gap-2">
            @foreach (var p in Model.Providers)
            {
                <button type="submit" class="btn btn-social btn-@p.Style" name="provider" value="@p.Provider">
                    <i class="fab fa-@p.Icon"></i> @String.Format(Resources.LogInWith, p.Name)
                </button>
            }
        </div>
    </div>
</form>