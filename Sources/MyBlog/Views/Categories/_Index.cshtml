@model MyBlog.Models.CategoriesVewModel
<div class="container">
    <div class="row row-cols-2">
        @foreach (var item in Model.Categories)
        {
            <div class="col p-0">
                <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-start col"
                   asp-controller="Post" asp-action="Category" asp-route-id="@item.Id">
                    @item.Name
                    <span class="badge rounded-pill bg-primary">@item.Count</span>
                </a>
            </div>
        }
    </div>
</div>