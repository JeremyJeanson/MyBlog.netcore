    ViewBag.Description = String.Format(Resources.AboutDescription, options.Value.AuthorName);
}
<panel title="@Resources.About" icon="fa-info">
    <div id="about">
        <img alt="Your name" src="~/Content/Images/about.jpg">
        <p>...</p>
        <div class=" pull-right">
            <a class="btn btn-block btn-social btn-twitter" title="Twitter [YourName]" href="https://twitter.com/[YourName]" target="_blank"><i class="fab fa-twitter"></i>@@[YourName]</a>
        </div>
    </div>
</panel>